package com.example.simple_movie_booking;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.autoconfigure.domain.EntityScan;
import org.springframework.data.jpa.repository.config.EnableJpaRepositories;

@SpringBootApplication(scanBasePackages = "com")
@EnableJpaRepositories(basePackages = "com.simplemovie.repository")
@EntityScan(basePackages = "com.simplemovie.entity")
public class SimpleMovieBookingApplication {

	public static void main(String[] args) {
		SpringApplication.run(SimpleMovieBookingApplication.class, args);
	}

}
